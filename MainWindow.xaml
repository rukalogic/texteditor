<Window x:Class="TextEditor.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:sys="clr-namespace:System;assembly=mscorlib"
        xmlns:local="clr-namespace:TextEditor"
        mc:Ignorable="d"
        Icon="Images/window-icon.png"
        Title="Text Editor" Height="450" Width="800">
        <Window.Resources>
            <Style TargetType="Button" >
                <Setter Property="Padding" Value="5,2"/>
            </Style>
        </Window.Resources>
    <Grid>
        <Grid.RowDefinitions>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="*"/>
            <RowDefinition  Height="25"/>
        </Grid.RowDefinitions>
        
        <Border BorderBrush="Gray" BorderThickness="1" CornerRadius="0 0 1 1">
        <Grid  VerticalAlignment="Center"  Background="#E3E1E1">
            <ToolBar Height="30">
            <Button Click="OpenFile_OnClick" Name="OpenFile" Background="Transparent"  BorderBrush="Transparent" Margin="10 0 0 0">
                <StackPanel Orientation="Horizontal">
                    <Image Width="16" Source="pack://application:,,,/Images/icons8-folder-48.png"></Image>
                </StackPanel>
                <Button.ToolTip>
                    <StackPanel>
                        <TextBlock TextWrapping="Wrap" Margin="0 0 0 5" FontWeight="Bold">Open File</TextBlock>
                        <TextBlock FontStyle="Italic" TextWrapping="Wrap">Scans your dusty ass PC for files</TextBlock>
                    </StackPanel>
                </Button.ToolTip>
            </Button>
            <Button Click="SaveFile_OnClick" Name="SaveFile" Background="Transparent" BorderBrush="Transparent" Margin="10 0 0 0" Grid.Column="1">
                <Image  Source="pack://application:,,,/Images/icons8-save-48.png"></Image>
                <Button.ToolTip>
                    <StackPanel>
                        <TextBlock TextWrapping="Wrap" Margin="0 0 0 5" FontWeight="Bold">Save File</TextBlock>
                        <TextBlock FontStyle="Italic" TextWrapping="Wrap">Save your file to your dusty ass pc</TextBlock>
                    </StackPanel>
                </Button.ToolTip>
            </Button>
            <Button Click="NewFile_OnClick" Name="NewFile" Background="Transparent" BorderBrush="Transparent" Margin="10 0 0 0" >
                <Image  Source="pack://application:,,,/Images/icons8-plus-48.png"></Image>
                <Button.ToolTip>
                    <StackPanel>
                        <TextBlock TextWrapping="Wrap" Margin="0 0 0 5" FontWeight="Bold">New File</TextBlock>
                        <TextBlock FontStyle="Italic" TextWrapping="Wrap">Create a new file in your dusty ass pc</TextBlock>
                    </StackPanel>
                </Button.ToolTip>
            </Button>
                <StackPanel Orientation="Horizontal" Margin="10 0 0 0">
                    <Image Width="20"  Source="pack://application:,,,/Images/icons8-font-size-50.png"></Image>
                    <TextBox VerticalAlignment="Center" SelectionChanged="FontSizeBox_OnSelectionChanged" Name="FontSizeBox" Width="20" Margin="5 0 0 0"></TextBox>
                </StackPanel>
            </ToolBar>
        </Grid>
        </Border>
        <RichTextBox SelectionChanged="Editor_OnSelectionChanged" 
                 SpellCheck.IsEnabled="True" 
                 Grid.Row="1"
                 VerticalScrollBarVisibility="Auto"
                 HorizontalScrollBarVisibility="Auto"
                 AcceptsTab="True"
                 AcceptsReturn="True"
                 Name="Editor" >
            <FlowDocument>
                <Paragraph>
                    
                </Paragraph>
            </FlowDocument>
            </RichTextBox>
        <Border Grid.Row="2" BorderBrush="Gray" BorderThickness="1" CornerRadius="1 1 0 0">
        <Grid Background="#E3E1E1">
            <Grid.ColumnDefinitions>
                <ColumnDefinition/>
                <ColumnDefinition/>
            </Grid.ColumnDefinitions>
            <TextBlock x:Name ="DateBlock" Padding="50 0 0 0" VerticalAlignment="Center"  Grid.Column="0"></TextBlock>
            <TextBlock VerticalAlignment="Center"  Padding="0 0 50 0" TextAlignment="Left" Grid.Column="1" Text="Page 1" />
        </Grid>
        </Border>
    </Grid>
</Window>
